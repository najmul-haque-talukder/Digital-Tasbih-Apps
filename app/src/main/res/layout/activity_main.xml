<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3FA2F6"
    android:orientation="vertical"
    tools:context=".MainActivity" >


    <LinearLayout
        android:layout_marginTop="100sp"
        android:layout_width="match_parent"
        android:layout_height="110sp"
        android:orientation="horizontal"
        >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="400sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gradia"
                    android:gravity="center"
                    android:padding="40sp"
                    android:text="Bismillah"
                    android:textColor="@color/black"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="400sp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gradia"
                    android:gravity="center"
                    android:padding="40sp"
                    android:textSize="30sp"
                    android:text="Allahu Akbar"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="400sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gradia"
                    android:gravity="center"
                    android:padding="40sp"
                    android:textSize="30sp"
                    android:text="La ilaha illah"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="400sp"
                    android:textSize="30sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gradia"
                    android:gravity="center"
                    android:padding="40sp"
                    android:text="Subhan Allah"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="400sp"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gradia"
                    android:gravity="center"
                    android:padding="40sp"
                    android:text="Astagfirullah"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="400sp"
                    android:textSize="30sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gradia"
                    android:gravity="center"
                    android:padding="40sp"
                    android:text="Alhamdulillah"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="400sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gradia"
                    android:gravity="center"
                    android:padding="40sp"
                    android:textSize="30sp"
                    android:text="Sallallahu Alaihi wa Sallam"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="400sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:fontFamily="@font/gradia"
                    android:gravity="center"
                    android:padding="40sp"
                    android:text="Subhan allahi wa bihamdihi"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="400sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:fontFamily="@font/gradia"
                    android:gravity="center"
                    android:padding="40sp"
                    android:text="Fi Amanillah"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="400sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gradia"
                    android:gravity="center"
                    android:padding="40sp"
                    android:textSize="30sp"
                    android:text="Rabbi Jidni Ilma"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="400sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:fontFamily="@font/gradia"
                    android:gravity="center"
                    android:padding="40sp"
                    android:text="Allahummag Firli"
                    android:textColor="@color/black" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="For more Jikir, Scroll Right Side >>>"
        android:fontFamily="@font/gradia"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center"
        />

    <Button
        android:id="@+id/clickButton"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:background="@drawable/countbutton"
        android:layout_gravity="center"
        android:layout_marginTop="75sp"
        android:text="0"
        android:textSize="50sp"
        android:fontFamily="@font/technology"/>

    <Button
        android:id="@+id/SubtractButton"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FF9800"
        android:layout_marginTop="24sp"
        android:fontFamily="@font/technology"
        android:text="Subtract"
        />

    <Button
        android:id="@+id/RestartButton"
        android:layout_width="314dp"
        android:layout_margin="7sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#FF9800"
        android:drawableRight="@drawable/restart"
        android:fontFamily="@font/technology"
        android:text="Restart"
        />

</LinearLayout>